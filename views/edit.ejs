<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blogy.title %></div>
    <form class="ui form" action="/blogs/<%= blogy._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blogy.title %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blogy.image %>">
        </div>
        <div class="field">
            <label>Post Content</label>
            <textarea name="blog[body]"><%= blogy.body %></textarea>
        </div>
        <button class="ui big violet basic button">Update Post</button>
    </form>
</div>

<% include ./partials/footer %>

